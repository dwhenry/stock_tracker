<div class="auth-container">
  <div class="auth-card">
    <div class="auth-header">
      <h1>ðŸ“Š Stock Tracker</h1>
      <p>Sign in to your account</p>
    </div>

    <% if flash[:alert] %>
      <div class="flash flash-alert">
        <span><%= flash[:alert] %></span>
      </div>
    <% end %>

    <% if flash[:notice] %>
      <div class="flash flash-notice">
        <span><%= flash[:notice] %></span>
      </div>
    <% end %>

    <%= form_with url: session_path, class: "form" do |form| %>
      <div class="form-group">
        <%= form.label :email_address, "Email", class: "form-label" %>
        <%= form.email_field :email_address, class: "form-input", required: true, autofocus: true, autocomplete: "username", placeholder: "Enter your email", value: params[:email_address] %>
      </div>

      <div class="form-group">
        <%= form.label :password, class: "form-label" %>
        <%= form.password_field :password, class: "form-input", required: true, autocomplete: "current-password", placeholder: "Enter your password", maxlength: 72 %>
      </div>

      <div class="form-actions">
        <%= form.submit "Sign In", class: "btn btn-primary btn-full" %>
      </div>
    <% end %>

    <div class="auth-links">
      <%= link_to "Forgot password?", new_password_path %>
    </div>
  </div>
</div>
