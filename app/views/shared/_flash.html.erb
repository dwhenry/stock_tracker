<% if notice %>
  <div class="flash flash-notice">
    <span><%= notice %></span>
    <button type="button" class="flash-close" onclick="this.parentElement.remove()">&times;</button>
  </div>
<% end %>

<% if alert %>
  <div class="flash flash-alert">
    <span><%= alert %></span>
    <button type="button" class="flash-close" onclick="this.parentElement.remove()">&times;</button>
  </div>
<% end %>
