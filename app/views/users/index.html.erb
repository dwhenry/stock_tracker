<div class="page-header">
  <h1>Users</h1>
  <%= link_to "Add User", new_user_path, class: "btn btn-primary" %>
</div>

<div class="card">
  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Role</th>
        <th>Status</th>
        <th class="actions">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td>
            <%= user.name %>
            <% if user == current_user %>
              <span class="badge badge-info">You</span>
            <% end %>
          </td>
          <td><%= user.email_address %></td>
          <td>
            <span class="badge badge-<%= user.role %>"><%= user.role.titleize %></span>
          </td>
          <td>
            <% if user.invited? %>
              <span class="badge badge-pending">Invitation Pending</span>
            <% else %>
              <span class="badge badge-active">Active</span>
            <% end %>
          </td>
          <td class="actions">
            <% if user.invited? %>
              <%= button_to "Resend Invite", resend_invitation_user_path(user), method: :post, class: "btn btn-sm btn-secondary" %>
            <% end %>
            <%= link_to "Edit", edit_user_path(user), class: "btn btn-sm btn-outline" %>
            <% unless user == current_user %>
              <%= link_to "Delete", user_path(user), method: :delete, data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this user?" }, class: "btn btn-sm btn-danger" %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
