<%= form_with model: [@customer, customer_stock], class: "form" do |form| %>
  <% if customer_stock.errors.any? %>
    <div class="form-errors">
      <h4><%= pluralize(customer_stock.errors.count, "error") %> prevented this from being saved:</h4>
      <ul>
        <% customer_stock.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :accessory_id, "Accessory", class: "form-label" %>
    <%= form.collection_select :accessory_id, @available_accessories, :id, :name, { prompt: "Select an accessory" }, { class: "form-input" } %>
  </div>

  <div class="form-group">
    <%= form.label :quantity, "Initial Quantity", class: "form-label" %>
    <%= form.number_field :quantity, class: "form-input", min: 0, value: customer_stock.quantity || 0 %>
  </div>

  <div class="form-actions">
    <%= form.submit "Add Stock", class: "btn btn-primary" %>
    <%= link_to "Cancel", customer_customer_stocks_path(@customer), class: "btn btn-outline" %>
  </div>
<% end %>
