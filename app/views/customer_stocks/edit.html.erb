<div class="page-header">
  <div class="breadcrumb">
    <%= link_to "Customers", customers_path %> / <%= link_to @customer.name, customer_customer_stocks_path(@customer) %> / <span>Edit Stock</span>
  </div>
  <h1>Edit <%= @customer_stock.accessory.name %> Stock</h1>
</div>

<div class="card form-card">
  <%= form_with model: [@customer, @customer_stock], class: "form" do |form| %>
    <% if @customer_stock.errors.any? %>
      <div class="form-errors">
        <h4><%= pluralize(@customer_stock.errors.count, "error") %> prevented this from being saved:</h4>
        <ul>
          <% @customer_stock.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="current-accessory">
      <div class="accessory-preview">
        <% if @customer_stock.accessory.image.attached? %>
          <%= image_tag @customer_stock.accessory.image, class: "preview-image" %>
        <% else %>
          <div class="no-image">ðŸ“¦</div>
        <% end %>
      </div>
      <div class="accessory-details">
        <h3><%= @customer_stock.accessory.name %></h3>
        <p>Alert Threshold: <%= @customer_stock.accessory.alert_when_stock_below %></p>
      </div>
    </div>

    <div class="form-group">
      <%= form.label :quantity, class: "form-label" %>
      <%= form.number_field :quantity, class: "form-input", min: 0 %>
      <span class="form-hint">Current quantity in stock</span>
    </div>

    <div class="form-actions">
      <%= form.submit "Update Stock", class: "btn btn-primary" %>
      <%= link_to "Cancel", customer_customer_stocks_path(@customer), class: "btn btn-outline" %>
    </div>
  <% end %>
</div>
